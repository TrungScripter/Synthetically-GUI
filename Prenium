-- ULTRA SIMPLE AUTO TRADE & BAT
-- Copy and paste this entire script

local Player = game.Players.LocalPlayer
local Char = Player.Character or Player.CharacterAdded:Wait()

local Enabled = true
local AutoAccept = true
local AutoBat = true

print("ðŸŽ¯ Trade Script Loaded!")
print("ðŸ”§ Controls: T = Toggle | B = Bat | A = Accept")

game:GetService("UserInputService").InputBegan:Connect(function(input, gp)
    if gp then return end
    
    if input.KeyCode == Enum.KeyCode.T then
        Enabled = not Enabled
        print("Script: " .. (Enabled and "ON" or "OFF"))
    end
    
    if input.KeyCode == Enum.KeyCode.B then
        for _, tool in pairs(Char:GetChildren()) do
            if tool:IsA("Tool") and tool.Name:lower():find("bat") then
                Char.Humanoid:EquipTool(tool)
                print("Equipped: " .. tool.Name)
                break
            end
        end
    end
end)

while true do
    if Enabled then
        -- Always equip bat
        if AutoBat then
            for _, tool in pairs(Char:GetChildren()) do
                if tool:IsA("Tool") and tool.Name:lower():find("bat") then
                    if not Char.Humanoid:GetEquippedTools()[1] then
                        Char.Humanoid:EquipTool(tool)
                    end
                    break
                end
            end
        end
        
        -- Auto accept trades
        if AutoAccept then
            for _, gui in pairs(game.CoreGui:GetDescendants()) do
                if gui:IsA("TextButton") and gui.Text:lower():find("accept") then
                    pcall(function() gui:FireEvent("Activated") end)
                    pcall(function() gui:FireEvent("MouseButton1Click") end)
                    print("Accepted trade!")
                    break
                end
            end
        end
    end
    wait(0.1)
end
